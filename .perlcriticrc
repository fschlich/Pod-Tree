# please alpha sort config items as you add them

severity = 4
theme = core
verbose = %f: [%p] %m at line %l, column %c.\n

[Objects::ProhibitIndirectSyntax]
forbid = command code is_c_begin is_c_cut is_c_for is_c_pod is_code is_command is_for is_item is_letter is_link is_list is_ordinary is_pod is_root is_sequence is_text is_verbatim ordinary root verbatim

[-InputOutput::RequireBriefOpen]
[-Modules::ProhibitMultiplePackages]
[-Modules::RequireEndWithOne]
[-Modules::RequireExplicitPackage]
[-Subroutines::ProhibitBuiltinHomonyms]
[-Subroutines::RequireArgUnpacking]
[-Subroutines::RequireFinalReturn]
[-ValuesAndExpressions::ProhibitCommaSeparatedStatements]
[-ValuesAndExpressions::ProhibitConstantPragma]
[-Variables::RequireLocalizedPunctuationVars]
